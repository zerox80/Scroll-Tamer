{
  "manifest_version": 3,
  "name": "Scroll Tamer (Minimal 0.2×)",
  "description": "Verlangsamt das Scrollen global auf 0.2× (ohne Einstellungen).",
  "version": "1.3.0",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.min.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ]
}